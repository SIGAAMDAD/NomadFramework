#!/usr/bin/env bash 
 
echo "üöÄ Running pre-commit tests..." 
 
if ! command -v dotnet > /dev/null 2>&1; then 
  echo "‚ùå .NET SDK not found" 
  exit 1 
fi 
 
if [ -d "Tests" ]; then 
  cd Tests 
  dotnet test --configuration Release --verbosity minimal 
 
  if [ $? -ne 0 ]; then 
    echo "‚ùå Tests failed!" 
    echo "Use: git commit --no-verify to skip" 
    exit 1 
  else 
    echo "‚úÖ Tests passed!" 
    exit 0 
  fi 
else 
  echo "‚ö†Ô∏è  No Tests/ directory found" 
  exit 0 
fi 
